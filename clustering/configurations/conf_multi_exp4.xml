<?xml version="1.0"?>

<!DOCTYPE page [

<!ENTITY experiment_name "exp4_">

<!ENTITY output_dir "/home/ir/davidol/clustering/src/test/outputs/&experiment_name;">

<!ENTITY lda_dir "&output_dir;/lda">
<!ENTITY term_per_topic_probability_file "&lda_dir;/out.term_topic_prob.txt">
<!ENTITY topic_document_term_probabilities_file "&lda_dir;/out.topic_doc_term_prob.txt">
<!ENTITY doc_topic_probability_file "&lda_dir;/out.document_topics.txt">

<!ENTITY mallet_model_file "&lda_dir;/out.serializedModel">
<!ENTITY mallet_pipe_file "&lda_dir;/out.serializedPipe">

]>

<configuration>

<!-- ======== EXPERIMENT ========= -->
<module name="Experiment">
	<param name="expand">true</param>	
	<param name="output_directory">&output_dir;</param>	
</module>


<!-- ======== DATA & PREPROCESSING ========= -->

<module name="Data">
	<param name="data_dir">/home/ir/davidol/clustering/resources/textCollections</param>	
</module>

<module name="Preprocessing">
	<param name="filter_stopwords">true</param>	
	<param name="stopwords_file">/home/ir/davidol/clustering/resources/non-topic-words_EN.txt</param>	
	<param name="pos-tagger-model">stanford-postagger-full-2008-09-28/models/left3words-wsj-0-18.tagger</param>
	
</module>

<module name="Gate-lemmatizer">
	<param name="lemmatizer-class">org.BURST.NLP.impl.GateLemmatizer</param>
	<param name="lemmatizer-rule-file">GATE-3.1/plugins/Tools/resources/morph/default.rul</param>
</module>

<!-- ======== CLUSTERING ========= -->

<module name = "context-tester">
	<param name="execute-steps">preprocess=n train=y termprob=y reverse-termprob=n topwords=y doctopics=y</param>
	<param name="extractions-file">notinuse</param>
	<param name="extraction-documents-file">&lda_dir;/lda_term_pseudoDocs.txt</param>
	<param name="term-topic-probabilities-file">&term_per_topic_probability_file;</param>
	<param name="topic-document-term-probabilities-file">&topic_document_term_probabilities_file;</param>
	<param name="min-topic-doc-term-probability">0.05</param>
	<param name="max-topic-doc-term-rank">5</param>
	<param name="topic-top-words-file">&lda_dir;/out.topic_top_words.txt</param>
	<param name="document-topics-file">&doc_topic_probability_file;</param>
</module>

<module name = "lda">
	<param name="num-of-topics">-1</param>
	<param name="alpha">0.1</param>
	<param name="beta">0.01</param>
	<param name="num-of-threads">1</param>
	<param name="num-of-iterations">1000</param>
	<param name="optimize-interval">9999</param>
	<param name="model-file">&mallet_model_file;</param>
	<param name="pipe-file">&mallet_pipe_file;</param>
	<param name="verbose">-1</param>
	<param name="model-output-dir">null</param>
</module>

<module name = "coclust">
	<param name="coclust_dir">/home/ir/davidol/clustering/coclust/cocluster-linux</param>
	<param name="matrix_dir">&output_dir;/dhillon</param>
</module>

<module name = "chinese-whispers">
	<param name="cw_dir">/home/ir/davidol/clustering/chinese_whispers_v1.0</param>
	<param name="work_dir">&output_dir;/cw</param>
</module>


<module name = "lda-term-clustering">
	<param name="term-prob-file">/home/ir/davidol/res/10000_ukwac.out.term_topic_prob.txt</param>
</module>


<module name="knowledge-resource">
    <param name="resource-name">dist-sim-bap</param>
	<param name="top-n-rules">20</param>
	<param name="l2r-redis-db-file">/home/ir/davidol/res/bap/similarity-l2r.rdb</param>
	<param name="r2l-redis-db-file">/home/ir/davidol/res/bap/similarity-r2l.rdb</param>
</module>

<module name = "WN">
	<param name="isCollapsed">true</param>
	<param name="useFirstSenseOnlyLeft">true</param>
	<param name="useFirstSenseOnlyRight">true</param>
	<param name="entailing-relations">SYNONYM</param>
	<param name="wordnet-dir">/home/ir/davidol/res/dict.wn.orig</param>
	<param name="wordnet-depth">1</param>
<!-- 	<param name="consider-sense-probability">false</param> -->
	<param name="lemmatizer-module">Gate-lemmatizer</param>
	<param name="wordnet dictionary implementation type">JWI</param>
</module>

</configuration>



