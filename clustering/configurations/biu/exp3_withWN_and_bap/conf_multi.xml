<module name="Data">
	<param name="data_dir">..\clustering\resources\textCollections</param>	
</module>

<module name="Preprocessing">
	<param name="filter_stopwords">true</param>	
	<param name="stopwords_file">..\clustering\resources\non-topic-words_EN.txt</param>	
	<param name="pos-tagger-model">D:/JARS/stanford-postagger-full-2008-09-28/models/left3words-wsj-0-18.tagger</param>
		
</module>

<module name="Gate-lemmatizer">
